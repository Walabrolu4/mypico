--person
function add_person(_x,_y)
	add(persons,{
		sp=1,
		x =_x,
		y=_y,
		w=3,
		h=4,
		state = 1,
	})
end

function draw_person(p)
	spr(p.sp,p.x,p.y,p.w,p.h)
end
-->8
--kitty
kitty={	
	sp=64,
	x=0,
	y=125-36,
	w=4,
	h=4,
	flp=false,
	state=1,
	}

function update_kitty(p)

	--walking
	if p.state == cat_states.walking then
		if p.x<0 then 
			p.flp = true
		elseif p.x+8*p.w > 128 then
			p.flp=false
		end
		
		if p.flp then
			p.x +=1
		else
			p.x -=1
		end
	end
end	
function draw_kitty(p)
		spr(p.sp,p.x,p.y,p.w,p.h,p.flp)
end
