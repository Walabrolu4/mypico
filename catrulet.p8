	chillin = 1,
	loved = 2,
	bite = 3
}
cat_states={
	idle = 0,
 walking = 1,
 rubble = 2,
 bite = 3,
}

function _init()
	persons={}
	palt(0,false)
	palt(11,true)
	add_person(15,125-37)
	add_person(50,125-37)
	add_person(85,125-37)
end

